generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  price           Int
  description     String
  category        String
  images          String[]
  sold            Boolean
  gift            Boolean
  stripePriceId   String
  stripeProductId String
}

type Favorite {
  id              String
  name            String
  price           Int
  description     String
  category        String
  images          String[]
  sold            Boolean
  gift            Boolean
  stripePriceId   String
  stripeProductId String
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String     @unique
  image     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  favorites Favorite[]
}
